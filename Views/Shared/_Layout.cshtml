<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
            <div class="row">
            <div class="col-md-12" style="display:flex; justify-content:center">
            <p>
                <a asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="" class="img-responsive"/></a>
            </p>
            </div>
    <div class="container">

        <nav class="navbar-inverse navbar-fixed-top" role="navigation">

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#Freshmart-navbar-collapse">
                        <span class="sr-only">Toggle Navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="Freshmart-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @await Component.InvokeAsync("CategoryMenu")
                        <li><a asp-controller="Contact" asp-action="Index">Contact Us</a></li>
                        <partial name="_LoginPartial"/>
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul>
                </div>
            </div>
        </nav>



            <div class="col-md-12">
        @RenderBody()
    </div>
    </div>

    <img src="http://localhost:9000/api/project_badges/measure?project=ECommerceKey&metric=alert_status&token=38a7b9ad5c4b6dec976eb80c7a8c3d2690651d23" alt="Quality Check"/>
    @RenderSection("scripts",required:false)
  </div>
</body>
</html>
