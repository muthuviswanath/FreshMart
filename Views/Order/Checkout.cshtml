@model Order

<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <h3>You are just one step away from ordering your desired products!</h3>


    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="danger" style="color:red"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control"/>
             <span asp-validation-for="LastName" class="danger" style="color:red"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="Address" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Address" class="form-control"/>
            <span asp-validation-for="Address" class="danger" style="color:red"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="City" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="City" class="form-control"/>
            <span asp-validation-for="City" class="danger" style="color:red"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="State" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="State" class="form-control"/>
            <span asp-validation-for="State" class="danger" style="color:red"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="PinCode" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="PinCode" class="form-control"/>
            <span asp-validation-for="PinCode" class="danger" style="color:red"></span>
        </div>
    </div>

        <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="danger" style="color:red"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Place Order" />
        </div>
    </div>

</form>